---
import Background from "../components/background/background.astro";
import Globals from "../components/globals/globals.astro";
import SharedStyles from "../components/globals/shared-styles.astro";
import Navbar from "../components/navbar/navbar.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <Globals />
    <meta
      name="description"
      content="Leon's portfolio, primarily consisting of his publications and research work"
    />
  </head>
  <body>
    <Navbar />
    <Background>
      <Globals />
      <SharedStyles />
      <div class="page-container">
        <div class="page-header">
          <h1 class="pageName">Portfolio</h1>
        </div>
        
        <div class="page-content">
          <section class="section">
            <div class="section-header">
              <svg class="section-icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/>
              </svg>
              <h2 class="section-title">Publications</h2>
            </div>
            
            <div class="grid grid-2">
              <article class="publication-card">
                <div class="publication-header">
                  <div class="publication-type">
                    <svg class="type-icon" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4M12,6A6,6 0 0,0 6,12A6,6 0 0,0 12,18A6,6 0 0,0 18,12A6,6 0 0,0 12,6M12,8A4,4 0 0,1 16,12A4,4 0 0,1 12,16A4,4 0 0,1 8,12A4,4 0 0,1 12,8Z"/>
                    </svg>
                    <span>Conference Paper</span>
                  </div>
                  <div class="publication-year">2024</div>
                </div>
                
                <h3 class="publication-title">
                  <a href="https://ieeexplore.ieee.org/abstract/document/10937610/" target="_blank" rel="noopener noreferrer">
                    Deep Learning for Steganographic Image Detection
                  </a>
                </h3>
                
                <p class="publication-authors">L. Lenk et al.</p>
                <p class="publication-venue">2024 IEEE MIT Undergraduate Research Technology Conference (URTC)</p>
                
                            <div class="publication-links">
              <a href="https://ieeexplore.ieee.org/abstract/document/10937610/" 
                 class="btn" 
                 target="_blank" 
                 rel="noopener noreferrer">
                <svg class="link-icon" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M14,3V7H17.59L7.76,16.83L9.17,18.24L19,8.41V12H21V3M19,19H5V5H12V3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V12H19V19Z"/>
                </svg>
                View Paper
              </a>
            </div>
              </article>
            </div>
          </section>

          <section class="portfolio-section">
            <div class="section-header">
              <svg class="section-icon" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4M12,6A6,6 0 0,0 6,12A6,6 0 0,0 12,18A6,6 0 0,0 18,12A6,6 0 0,0 12,6M12,8A4,4 0 0,1 16,12A4,4 0 0,1 12,16A4,4 0 0,1 8,12A4,4 0 0,1 12,8Z"/>
              </svg>
              <h2 class="section-title">Coming Soon</h2>
            </div>
            
            <div class="coming-soon">
              <p class="coming-soon-text">
                More exciting research and projects are in the works. Stay tuned for updates!
              </p>
              <div class="coming-soon-icon">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4M12,6A6,6 0 0,0 6,12A6,6 0 0,0 12,18A6,6 0 0,0 18,12A6,6 0 0,0 12,6M12,8A4,4 0 0,1 16,12A4,4 0 0,1 12,16A4,4 0 0,1 8,12A4,4 0 0,1 12,8Z"/>
                </svg>
              </div>
            </div>
          </section>
        </div>
      </div>
    </Background>
  </body>
</html>

<style lang="scss">
  .page-container {
    margin-bottom: 60px;
  }

  .publication-card {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border-primary);
    border-radius: var(--radius-lg);
    padding: 25px;
    transition: all var(--transition-normal);
    backdrop-filter: blur(10px);
  }

  .publication-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-border-accent);
  }

  .publication-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
  }

  .publication-type {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.9rem;
    color: var(--color-primary);
    font-weight: 500;
  }

  .type-icon {
    width: 16px;
    height: 16px;
  }

  .publication-year {
    background: rgba(0, 123, 255, 0.2);
    color: var(--color-primary);
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 600;
  }

  .publication-title {
    margin: 0 0 10px 0;
    font-size: 1.3rem;
    line-height: 1.4;
  }

  .publication-title a {
    color: var(--color-text-primary);
    text-decoration: none;
    transition: color var(--transition-normal);
  }

  .publication-title a:hover {
    color: var(--color-primary);
  }

  .publication-authors {
    color: var(--color-text-secondary);
    font-size: 1rem;
    margin: 0 0 8px 0;
    font-style: italic;
  }

  .publication-venue {
    color: var(--color-text-muted);
    font-size: 0.95rem;
    margin: 0 0 20px 0;
  }

  .publication-links {
    display: flex;
    gap: 15px;
  }

  .link-icon {
    width: 16px;
    height: 16px;
  }

  .coming-soon {
    text-align: center;
    padding: 60px 20px;
    background: var(--color-bg-overlay);
    border: 2px dashed var(--color-border-primary);
    border-radius: var(--radius-lg);
  }

  .coming-soon-text {
    font-size: 1.2rem;
    color: var(--color-text-secondary);
    margin: 0 0 20px 0;
    line-height: 1.6;
  }

  .coming-soon-icon {
    display: inline-block;
    width: 60px;
    height: 60px;
    color: rgba(255, 255, 255, 0.3);
    animation: pulse 2s infinite;
  }

  .coming-soon-icon svg {
    width: 100%;
    height: 100%;
  }
</style>
