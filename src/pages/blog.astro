---
import Background from "../components/background/background.astro";
import Globals from "../components/globals/globals.astro";
import SharedStyles from "../components/globals/shared-styles.astro";
import Navbar from "../components/navbar/navbar.astro";
import PostLink from "../layouts/postLink.astro";
import { getCollection } from "astro:content";
const allPosts = await getCollection("blog");
---

<!doctype html>
<html lang="en">
  <head>
    <Globals />
    <meta name="description" content="Leon's blog hub" />
  </head>
  <body>
    <Navbar />
    <Background>
      <Globals />
      <SharedStyles />
      <div class="page-container">
        <div class="page-header">
          <h1 class="pageName">My Blog</h1>
          <p class="page-subtitle">Thoughts, writing, and insights</p>
        </div>
        
        <div class="page-content">
          <div class="grid grid-2">
            {
              allPosts.sort((a, b) => {
                  const dateA = new Date(a.data.pubDate);
                  const dateB = new Date(b.data.pubDate);
                  return dateB - dateA;
                }).map((post) => (
                <div class="post-wrapper">
                  <PostLink
                    path={`/blog/${post.slug}/`}
                    title={post.data.title}
                    body={
                      " " + post.body.substring(0, 200) + (post.body.length > 200
                        ? "..."
                        : "")
                    }
                    footer={
                      new Date(post.data.pubDate).toLocaleDateString("en-US", {
                        year: "numeric",
                        month: "long",
                        day: "numeric",
                      }) +
                      " | Author: " +
                      post.data.author +
                      " | Tags: " +
                      post.data.tags.map((tag) => tag).join(", ")
                    }
                  />
                </div>
              ))
            }
          </div>
          
          {allPosts.length === 0 && (
            <div class="empty-state">
              <div class="empty-icon">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/>
                </svg>
              </div>
              <h3>No posts yet</h3>
              <p>Check back soon for new content!</p>
            </div>
          )}
        </div>
      </div>
    </Background>
  </body>
</html>

<style lang="scss">
  .post-wrapper {
    transition: transform var(--transition-normal);
  }

  .post-wrapper:hover {
    transform: translateY(-5px);
  }
</style>
