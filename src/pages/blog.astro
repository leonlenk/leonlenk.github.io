---
import Background from "../components/background/background.astro";
import Globals from "../components/globals/globals.astro";
import Navbar from "../components/navbar/navbar.astro";
import PostLink from "../layouts/postLink.astro";
import { getCollection } from "astro:content";
const allPosts = await getCollection("blog");
---

<!doctype html>
<html lang="en">
  <head>
    <Globals />
    <meta name="description" content="Leon's Poetry hub" />
  </head>
  <body>
    <Navbar />
    <Background>
      <div class="blog-container">
        <div class="blog-header">
          <h1 class="pageName">My Blog</h1>
          <p class="blog-subtitle">Thoughts, poetry, and insights</p>
        </div>
        
        <div class="blog-content">
          <div class="posts-grid">
            {
              allPosts.sort((a, b) => {
                  const dateA = new Date(a.data.pubDate);
                  const dateB = new Date(b.data.pubDate);
                  return dateB - dateA;
                }).map((post) => (
                <div class="post-wrapper">
                  <PostLink
                    path={`/blog/${post.slug}/`}
                    title={post.data.title}
                    body={
                      " " + post.body.substring(0, 200) + (post.body.length > 200
                        ? "..."
                        : "")
                    }
                    footer={
                      new Date(post.data.pubDate).toLocaleDateString("en-US", {
                        year: "numeric",
                        month: "long",
                        day: "numeric",
                      }) +
                      " | Author: " +
                      post.data.author +
                      " | Tags: " +
                      post.data.tags.map((tag) => tag).join(", ")
                    }
                  />
                </div>
              ))
            }
          </div>
          
          {allPosts.length === 0 && (
            <div class="empty-state">
              <div class="empty-icon">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/>
                </svg>
              </div>
              <h3>No posts yet</h3>
              <p>Check back soon for new content!</p>
            </div>
          )}
        </div>
      </div>
    </Background>
  </body>
</html>

<style lang="scss">
  .blog-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .blog-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .blog-subtitle {
    font-size: 1.2rem;
    color: #cccccc;
    margin-top: 10px;
    font-style: italic;
  }

  .blog-content {
    margin-top: 40px;
  }

  .posts-grid {
    display: grid;
    gap: 40px;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
  }

  .post-wrapper {
    transition: transform 0.3s ease;
  }

  .post-wrapper:hover {
    transform: translateY(-5px);
  }

  .empty-state {
    text-align: center;
    padding: 80px 20px;
    background: rgba(255, 255, 255, 0.02);
    border: 2px dashed rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    margin-top: 40px;
  }

  .empty-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 20px;
    color: rgba(255, 255, 255, 0.3);
  }

  .empty-state h3 {
    color: #ffffff;
    margin: 0 0 10px 0;
    font-size: 1.5rem;
  }

  .empty-state p {
    color: #cccccc;
    margin: 0;
    font-size: 1.1rem;
  }

  @media (max-width: 768px) {
    .posts-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .blog-header {
      margin-bottom: 40px;
    }

    .blog-subtitle {
      font-size: 1rem;
    }
  }
</style>
