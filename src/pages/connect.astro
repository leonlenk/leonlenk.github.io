<style lang="scss">
  .connect-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .connect-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .connect-subtitle {
    font-size: 1.2rem;
    color: #cccccc;
    margin-top: 10px;
    font-style: italic;
  }

  .connect-content {
    margin-top: 40px;
  }

  .connect-section {
    margin-bottom: 60px;
  }

  .section-header {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 40px;
    padding-bottom: 15px;
    border-bottom: 2px solid rgba(255, 255, 255, 0.1);
  }

  .section-icon {
    width: 32px;
    height: 32px;
    color: #007bff;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 600;
    margin: 0;
    color: #ffffff;
  }

  .socials-grid {
    display: grid;
    gap: 25px;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  }

  .social-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: 25px;
    text-decoration: none;
    color: inherit;
    display: flex;
    align-items: center;
    gap: 20px;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    position: relative;
    overflow: hidden;
  }

  .social-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #007bff, #00d4ff, #007bff);
    background-size: 200% 100%;
    animation: shimmer 3s ease-in-out infinite;
  }

  @keyframes shimmer {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .social-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0, 123, 255, 0.15);
    border-color: rgba(0, 123, 255, 0.3);
  }

  .social-icon-wrapper {
    flex-shrink: 0;
    width: 50px;
    height: 50px;
    background: rgba(0, 123, 255, 0.1);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .social-card:hover .social-icon-wrapper {
    background: rgba(0, 123, 255, 0.2);
    transform: scale(1.1);
  }

  .social-icon {
    width: 28px;
    height: 28px;
    color: #007bff;
    transition: color 0.3s ease;
  }

  .social-card:hover .social-icon {
    color: #00d4ff;
  }

  .social-content {
    flex: 1;
  }

  .social-title {
    font-size: 1.3rem;
    font-weight: 600;
    color: #ffffff;
    margin: 0 0 8px 0;
    transition: color 0.3s ease;
  }

  .social-card:hover .social-title {
    color: #007bff;
  }

  .social-description {
    color: #cccccc;
    font-size: 0.95rem;
    margin: 0;
    line-height: 1.4;
  }

  .arrow-icon {
    width: 20px;
    height: 20px;
    color: #007bff;
    transition: all 0.3s ease;
    flex-shrink: 0;
  }

  .social-card:hover .arrow-icon {
    color: #00d4ff;
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .socials-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .social-card {
      padding: 20px;
      gap: 15px;
    }

    .social-icon-wrapper {
      width: 45px;
      height: 45px;
    }

    .social-icon {
      width: 24px;
      height: 24px;
    }

    .social-title {
      font-size: 1.2rem;
    }

    .social-description {
      font-size: 0.9rem;
    }

    .section-title {
      font-size: 1.5rem;
    }

    .connect-header {
      margin-bottom: 40px;
    }

    .connect-subtitle {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .social-card {
      padding: 18px;
      gap: 12px;
    }

    .social-icon-wrapper {
      width: 40px;
      height: 40px;
    }

    .social-icon {
      width: 20px;
      height: 20px;
    }

    .social-title {
      font-size: 1.1rem;
    }

    .social-description {
      font-size: 0.85rem;
    }
  }
</style>
