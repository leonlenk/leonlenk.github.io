---
import Reset from "./reset.astro";
---

<Reset />

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>Leon Lenk's Website</title>

<style is:global>
  /* --- Lora Variable Font --- */
  @font-face {
    font-family: "Lora";
    src: url("/fonts/Lora/Lora-VariableFont_wght.ttf") format("ttf");
    font-weight: 400 700;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "Lora";
    src: url("/fonts/Lora/Lora-Italic-VariableFont_wght.ttf") format("ttf");
    font-weight: 400 700;
    font-style: italic;
    font-display: swap;
  }

  /* --- Open Sans Variable Font --- */
  @font-face {
    font-family: "Open Sans";
    src: url("/fonts/Open_Sans/OpenSans-VariableFont_wdth,wght.ttf")
      format("ttf");
    font-weight: 300 800;
    font-stretch: 75% 125%;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "Open Sans";
    src: url("/fonts/Open_Sans/OpenSans-Italic-VariableFont_wdth,wght.ttf")
      format("ttf");
    font-weight: 300 800;
    font-stretch: 75% 125%;
    font-style: italic;
    font-display: swap;
  }

  body {
    font-family: "Open Sans", sans-serif;
    font-weight: 400;
    color: #e0e0e0;
    font-size: 1.1rem;
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: "Lora", serif;
    color: #ffffff;
    text-shadow: 0 0 10px rgba(255, 255, 255, 0.4);
    letter-spacing: 0.03em;
  }

  h1 {
    font-size: 3.2em;
    font-weight: 700;
    text-align: center;
    text-shadow: 0 0 15px rgba(255, 255, 255, 0.6);
  }

  h2 {
    font-size: 2.5em;
    font-weight: 600; /* Semi-bold */
    text-shadow:
      -1px -1px 0 black,
      1px -1px 0 black,
      -1px 1px 0 black,
      1px 1px 0 black;
  }

  h3 {
    font-size: 1.8em;
    font-weight: 500; /* Medium weight */
    text-shadow:
      -1px -1px 0 black,
      1px -1px 0 black,
      -1px 1px 0 black,
      1px 1px 0 black;
  }

  h4 {
    font-size: 1.4em;
    font-weight: 400; /* Regular weight */
    text-shadow:
      -1px -1px 0 black,
      1px -1px 0 black,
      -1px 1px 0 black,
      1px 1px 0 black;
  }

  p {
    text-shadow:
      -1px -1px 0 black,
      1px -1px 0 black,
      -1px 1px 0 black,
      1px 1px 0 black;
  }

  a {
    color: #add8e6;
    text-decoration: none;
    transition:
      color 0.3s ease,
      text-shadow 0.3s ease;
  }

  a:hover {
    color: #ffffff;
    text-shadow: 0 0 12px rgba(255, 255, 255, 0.8);
  }

  nav {
    text-align: center;
    padding: 20px 0;
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(5px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    justify-content: center;
    gap: 30px;
  }

  nav li a {
    font-family: "Lora", serif;
    font-size: 1.3em;
    font-weight: 500;
    color: #add8e6;
    text-shadow: 0 0 5px rgba(173, 216, 230, 0.5);
  }

  nav li a:hover {
    color: #ffffff;
    text-shadow: 0 0 15px rgba(255, 255, 255, 0.9);
  }
</style>

<style lang="scss" is:global>
  .pageName {
    margin-top: 100px;
  }
  .pageTextContainer {
    background-color: #2f0ac214;
    border-radius: 2rem;
    position: relative;
    z-index: 1;
    margin: 60px auto;
    margin-bottom: 160px;
    text-justify: inter-word;
    padding: 30px 40px;
    backdrop-filter: blur(0.5px);
    -webkit-backdrop-filter: blur(0.5px); /* For Safari compatibility */
    max-width: 60ch;
    min-width: 20ch;
    height: 100%;
    line-height: 1.6;
  }

  .pageTextContainer img {
    width: 150px;
    height: auto;
    margin-left: 20px;
    margin-right: 10px;
    margin-top: 9px;
    float: right;
  }

  @media (max-width: 768px) {
    .pageTextContainer {
      max-width: 80vw;
      background-color: transparent;
    }
  }
</style>
